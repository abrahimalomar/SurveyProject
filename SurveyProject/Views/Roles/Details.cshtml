@model AspNetRoles

@{
    ViewData["Title"] = "Details";

}


<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NormalizedName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NormalizedName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConcurrencyStamp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConcurrencyStamp)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AddUesrToRole" class="btn btn-success">AddUserTo Roles</a>
</div>


<table class="table table-bordered table-striped">
    <thead class="table-dark">
    <tr>
        <th>UserName</th>
        <th>Email</th>
        <th>Remove</th>
    </tr>
    </thead>
    @foreach (var item in ViewBag.userss)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            

            <td>
                <a asp-action="RemoveUserFromRoles" asp-route-id="@item.Id" class="btn btn-danger">Remove</a>
            </td>
        </tr>
    }
</table>
