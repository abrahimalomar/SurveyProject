@model IEnumerable<SurveyProject.Models.Options>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Options1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qution)
            </th>
          <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Options1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qution.QuestionTitile)
            </td>
            <td>
                <a asp-controller="Options" asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-warning">Edit</a> 
                <a asp-controller="Options" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                <a asp-controller="Options" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
