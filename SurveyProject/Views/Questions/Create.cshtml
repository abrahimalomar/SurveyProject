@model SurveyProject.Models.Questions

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Questions</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="QuestionTitile" class="control-label"></label>
                <input asp-for="QuestionTitile" class="form-control" />
                <span asp-validation-for="QuestionTitile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select name="Type" asp-for="Type" asp-items="Html.GetEnumSelectList<QutionType>()" class="form-control"></select>
             
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Is Required?</label>
                <div class="form-check">
                    <input type="checkbox" asp-for="IsRequired" class="form-check-input" />
                </div>
            </div>
           
            <div class="form-group" id="radio-options" style="display:none;">
                <label>Radio Options</label>
                <button type="button" class="btn btn-secondary">Create Options</button>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    $(function () {
        $('select[name="Type"]').on('change', function () {
            if ($(this).val() === 'radio') {
                $('#radio-options').show();
            } else {
                $('#radio-options').hide();
            }
        });
    });
</script>

